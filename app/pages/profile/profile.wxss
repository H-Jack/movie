page {
  background-color: #f5f5f5;
}

.warp {
  background-color: #fff;
  margin-top: 20rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  border-bottom: 1rpx #dcdcdc solid;
  border-top: 1rpx #dcdcdc solid;
}

.item {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx #dcdcdc solid;
  position: relative;
}

.item::after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #ccc;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  right: 0;
  margin-right: 28rpx;
  margin-top: 30rpx;
  
}
.last{
    border-bottom:none;
}


.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 46vh;
  filter: blur(10rpx);
  width: 100%;
  padding-bottom: 15rpx;
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: black;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  background-color: green;
  color: white;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}